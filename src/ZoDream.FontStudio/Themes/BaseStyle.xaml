<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:cvt="using:ZoDream.FontStudio.Converters">

    <cvt:ToggleConverter x:Key="ToggleCvt" />
    <x:Double x:Key="LargeToolSize">48</x:Double>
    <x:Double x:Key="ToolSize">32</x:Double>

    <Style x:Name="IconBtn" TargetType="ButtonBase">
        <Setter Property="VerticalAlignment" Value="Stretch" />
        <Setter Property="FontFamily" Value="{StaticResource SymbolThemeFontFamily}" />
    </Style>

    <Style
        x:Name="LargeIconBtn"
        BasedOn="{StaticResource IconBtn}"
        TargetType="ButtonBase">
        <Setter Property="Width" Value="{StaticResource LargeToolSize}" />
        <Setter Property="Height" Value="{StaticResource LargeToolSize}" />
        <!--<Setter Property="Background" Value="Transparent" />-->
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
</ResourceDictionary>
