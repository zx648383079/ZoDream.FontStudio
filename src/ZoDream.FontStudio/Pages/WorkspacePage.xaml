<?xml version="1.0" encoding="utf-8" ?>
<Page
    x:Class="ZoDream.FontStudio.Pages.WorkspacePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bhv="using:ZoDream.FontStudio.Behaviors"
    xmlns:ctl="using:ZoDream.FontStudio.Controls"
    xmlns:cvt="using:ZoDream.FontStudio.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:ivy="using:Microsoft.Xaml.Interactivity"
    xmlns:local="using:ZoDream.FontStudio.Pages"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="using:ZoDream.FontStudio.ViewModels"
    mc:Ignorable="d">
    <Page.DataContext>
        <vm:WorkspaceViewModel />
    </Page.DataContext>

    <Page.Resources>
        <ResourceDictionary>
            <DataTemplate x:Key="GlyphGroupTemplate" x:DataType="vm:GlyphGroupViewModel">
                <TreeViewItem AutomationProperties.Name="{Binding Name}" ItemsSource="{Binding Items}">
                    <TextBlock Text="{Binding Name}" />
                </TreeViewItem>
            </DataTemplate>
            <DataTemplate x:Key="GlyphItemTemplate" x:DataType="vm:GlyphViewModel">
                <TreeViewItem AutomationProperties.Name="{Binding Name}">
                    <TextBlock Text="{Binding Name}" />
                </TreeViewItem>
            </DataTemplate>



            <DataTemplate x:Key="LayerItemTemplate">
                <Grid Height="60">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="60" />
                        <ColumnDefinition />
                        <ColumnDefinition Width="30" />
                        <ColumnDefinition Width="30" />
                    </Grid.ColumnDefinitions>
                    <Image Source="{Binding PreviewImage}" Stretch="UniformToFill" />
                    <TextBlock
                        Grid.Column="1"
                        Margin="8,0,0,0"
                        VerticalAlignment="Center"
                        Text="{Binding Name}" />
                    <ctl:ToggleIcon
                        Grid.Column="2"
                        VerticalAlignment="Center"
                        Command="{Binding Workspace.LayerVisibleToggleCommand}"
                        CommandParameter="{Binding}"
                        IsOn="{Binding IsVisible, Mode=TwoWay}"
                        OffIcon="&#xED1A;"
                        OnIcon="&#xE7B3;" />
                    <ctl:ToggleIcon
                        Grid.Column="3"
                        VerticalAlignment="Center"
                        Command="{Binding Workspace.LayerLockToggleCommand}"
                        CommandParameter="{Binding}"
                        IsOn="{Binding IsLocked, Mode=TwoWay}"
                        OffIcon="&#xE785;"
                        OnIcon="&#xE72E;" />
                </Grid>
            </DataTemplate>

            <ctl:GlyphItemTemplateSelector
                x:Key="GlyphTemplateSelector"
                GlyphTemplate="{StaticResource GlyphItemTemplate}"
                GroupTemplate="{StaticResource GlyphGroupTemplate}" />
        </ResourceDictionary>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <ProgressBar
            VerticalAlignment="Top"
            Background="Transparent"
            IsIndeterminate="{Binding IsLoading}" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition />
                <ColumnDefinition Width="auto" />
            </Grid.ColumnDefinitions>
            <CommandBar>
                <AppBarButton
                    Command="{Binding UndoCommand}"
                    Icon="Undo"
                    IsEnabled="{Binding UndoEnabled}"
                    Label="撤销" />
                <AppBarButton
                    Command="{Binding RedoCommand}"
                    Icon="Redo"
                    IsEnabled="{Binding RedoEnabled}"
                    Label="重做" />
                <AppBarSeparator />
                <AppBarButton
                    Command="{Binding SaveCommand}"
                    Icon="Save"
                    Label="保存" />
                <AppBarButton
                    Command="{Binding AddLayerCommand}"
                    Icon="OpenFile"
                    Label="添加图层" />
                <AppBarButton
                    Command="{Binding DeleteLayerCommand}"
                    Icon="Delete"
                    IsEnabled="{Binding IsSelectedLayer}"
                    Label="删除图层" />
                <AppBarButton
                    Command="{Binding ImportFolderCommand}"
                    Icon="OpenLocal"
                    Label="导入文件夹" />
                <AppBarSeparator />
                <AppBarButton
                    Command="{Binding LayerPropertyCommand}"
                    Icon="Setting"
                    IsEnabled="{Binding IsSelectedLayer}"
                    Label="图层属性" />
                <AppBarButton
                    Command="{Binding ExportCommand}"
                    Icon="Download"
                    Label="导出" />
            </CommandBar>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition />
                <ColumnDefinition Width="200" />
            </Grid.ColumnDefinitions>

            <TreeView
                ItemTemplateSelector="{StaticResource GlyphTemplateSelector}"
                ItemsSource="{Binding GlyphItems}"
                SelectedItem="{Binding SelectedLayer, Mode=TwoWay}" />

            <ctl:ImageEditor x:Name="Editor" Grid.Column="1" />

            <Grid Grid.Column="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="200" />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <ctl:ImageEditor />

                <ListView
                    Grid.Row="1"
                    ItemTemplate="{StaticResource LayerItemTemplate}"
                    ItemsSource="{Binding LayerItems}" />
            </Grid>
        </Grid>
    </Grid>
</Page>
