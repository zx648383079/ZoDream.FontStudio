<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="ZoDream.FontStudio.Controls.ImageEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:ZoDream.FontStudio.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:skia="using:SkiaSharp.Views.Windows"
    mc:Ignorable="d">

    <ScrollViewer
        HorizontalScrollBarVisibility="Auto"
        HorizontalScrollMode="Auto"
        VerticalScrollBarVisibility="Auto"
        VerticalScrollMode="Auto"
        ZoomMode="Enabled">
        <skia:SKXamlCanvas
            x:Name="PART_Canvas"
            KeyDown="PART_Canvas_KeyDown"
            KeyUp="PART_Canvas_KeyUp"
            ManipulationCompleted="PART_Canvas_ManipulationCompleted"
            ManipulationDelta="PART_Canvas_ManipulationDelta"
            ManipulationStarted="PART_Canvas_ManipulationStarted"
            PaintSurface="PART_Canvas_PaintSurface"
            PointerMoved="PART_Canvas_PointerMoved"
            PointerPressed="PART_Canvas_PointerPressed"
            PointerReleased="PART_Canvas_PointerReleased"
            XYFocusKeyboardNavigation="Enabled" />
    </ScrollViewer>
</UserControl>
